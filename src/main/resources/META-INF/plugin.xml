<idea-plugin>
  <id>io.github.heldev.elasticindents</id>
  <name>Elastic Indents</name>
  <vendor email="heldevemail@gmail.com" url="https://github.com/heldev/intellij-elastic-indents">heldev</vendor>

  <description>
    <![CDATA[Doubles the visual length of space indents<br/>
    Switch it on/off using <kbd>View -> Toggle Elastic Indents</kbd>
    <div><img src="https://raw.githubusercontent.com/heldev/intellij-elastic-indents/master/demo.gif"></div>]]>
  </description>

  <change-notes>Initial version, visually doubles the length of space indents</change-notes>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.platform</depends>

  <actions>
      <action id="io.github.heldev.ToggleElasticIndentsAction"
              class="io.github.heldev.ToggleElasticIndentsAction"
              text="Toggle Elastic Indents"
              description="Turn elastic indentation on or off">
          <add-to-group group-id="ViewMenu" anchor="last"/>
      </action>
  </actions>

</idea-plugin>
