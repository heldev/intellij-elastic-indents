<idea-plugin>
  <id>io.github.heldev.elasticindents</id>
  <name>Elastic indents</name>
  <version>0.6.0</version>
  <vendor email="heldevemail@gmail.com" url="https://github.com/heldev/intellij-elastic-indents">heldev</vendor>

  <description><![CDATA[
      Display space indented sources as if indents were twice as long
    ]]></description>

  <change-notes><![CDATA[
      Initial version
      Double the length of space indents
    ]]>
  </change-notes>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="183.0"/>

  <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <depends>com.intellij.modules.platform</depends>

  <actions>
      hw

      <action id="io.github.heldev.ToggleElasticIndents"
              class="io.github.heldev.ToggleElasticIndents"
              text="Toggle Elastic Indents"
              description="Turn elastic indentation on or off">
          <add-to-group group-id="ViewMenu" anchor="last"/>
      </action>
  </actions>

</idea-plugin>
